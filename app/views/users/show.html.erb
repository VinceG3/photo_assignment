<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Website:</strong>
  <%= @user.website %>
</p>

<h2>Albums</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Thumbnail</th>
    </tr>
  </thead>

  <tbody>
    <% @user.albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><img src=<%= album.thumbnail_url %>></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', users_path %>
